
<style>

  
/* preloader */

.preload-div{
  position: absolute;
  top: 0;
  left: 0;
    width: 100%;
    height: 100%;
    display: grid;
    place-items: center;
    background-color: #2c3e50;
    
}

.preloader{
   background-color: #2c3e50;
    display: grid;
    place-items: center;
     width: 150px;
    height: 150px;
    border-radius: 50%;
    color:whitesmoke;
     border-top: 3px solid #81ecec;
     animation: load .5s linear infinite;
}

  .preloader h1{
    font-size: 21px;
    animation: loads .5s linear infinite;
    color:whitesmoke;
  }
  
  @keyframes loads{
    0%{transform: rotate(0deg);}
    
      100%{transform: rotate(-360deg);}
      
       
    }
  
  
  @keyframes load{
  0%{transform: rotate(0deg);}
  
    100%{transform: rotate(360deg);}
    
     
  }

</style>

    <div class="preload-div">
        <div class="preloader">
         <h1>loading...</h1>
        </div>
      </div>
      <script>
        const preloader = document.querySelector('.preload-div')
        window.addEventListener('load' , ()=>{
            preloader.remove();
            
            })
            
        </script>

